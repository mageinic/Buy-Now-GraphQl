<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\StoreGraphQl\Model\Resolver\Store\StoreConfigDataProvider">
        <arguments>
            <argument name="extendedConfigData" xsi:type="array">
                <item name="buynow_enable"
                      xsi:type="string">buy_now_button/general/enable</item>
                <item name="button_title"
                      xsi:type="string">buy_now_button/general/button_title</item>
                <item name="keep_cart_products"
                      xsi:type="string">buy_now_button/general/keep_cart_products</item>
                <item name="show_on_product_detail_page"
                      xsi:type="string">buy_now_button/general/show_on_product_detail_page</item>
                <item name="show_on_wishlist_product"
                      xsi:type="string">buy_now_button/general/show_on_wishlist_product</item>
                <item name="show_on_listing_page"
                      xsi:type="string">buy_now_button/general/show_on_listing_page</item>
                <item name="show_on_compare_list_product"
                      xsi:type="string">buy_now_button/general/show_on_compare_list_product</item>
                <item name="show_on_related_product"
                      xsi:type="string">buy_now_button/general/show_on_related_product</item>
                <item name="show_on_upsell_product"
                      xsi:type="string">buy_now_button/general/show_on_upsell_product</item>
                <item name="show_on_cross_sell_product"
                      xsi:type="string">buy_now_button/general/show_on_cross_sell_product</item>
                <item name="show_on_widget_product"
                      xsi:type="string">buy_now_button/general/show_on_widget_product</item>
            </argument>
        </arguments>
    </type>
</config>
